package application;

import javafx.scene.canvas.Canvas;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;
import javafx.scene.layout.Background;
import javafx.scene.layout.BackgroundFill;
import javafx.scene.layout.Pane;
import javafx.scene.paint.Color;

public class HomePane extends Pane {
	private MotionPattern pattern;
	
	// Images
	private Image preset;
	private Image pencil;
	private Image disk;
	
	// On-screen elements
	private NavButton patternSelect;
	private NavButton edit = new NavButton("Edit", 520, 130, e->edit());
	private NavButton save = new NavButton("", 660, 130, e->save());
	private QuickAccessGroup amplitudeGrp = new QuickAccessGroup(pattern.getAmplitude(), 535, 10);
	private QuickAccessGroup frequencyGrp = new QuickAccessGroup(pattern.getFrequency(), 535, 275);
	private Canvas patternImage = pattern.getImage(515, 515, Color.rgb(26, 26, 26), Color.WHITE, 2);

	public HomePane(MotionPattern pattern) {
		this.pattern = pattern;
		
		this.setBackground(new Background(new BackgroundFill(Color.rgb(26,26,26), null, null)));
		
		// Configure "Select Pattern" button
		preset = new Image("file:preset.png", 35, 35, true, true);
		patternSelect = new NavButton("Select Pattern", 10, 500, e->selectPattern());
		patternSelect.setGraphic(new ImageView(preset));
		this.getChildren().add(patternSelect);
		
		// Configure "Edit" button
		pencil = new Image("file:edit.png", 35, 35, true, true);
		edit = new NavButton("Edit", 520, 130, e->edit());
		edit.setGraphic(new ImageView(pencil));
		this.getChildren().add(edit);
		
		// Configure "Save" button
		disk = new Image("file:save.png", 35, 35, true, true);
		save.setGraphic(new ImageView(disk));
		this.getChildren().add(save);
		
		// Configure Amplitude grouping
		this.getChildren().add(amplitudeGrp);
		
		// Create and configure Frequency grouping
		this.getChildren().add(frequencyGrp);
		
		// Display motion pattern image
		patternImage.setTranslateX(10);
		patternImage.setTranslateY(10);
		this.getChildren().add(patternImage);
	}
	
	public void selectPattern() {
		
	}
	
	public void edit() {
		
	}
	
	public void save() {
		
	}
	
	public void update(MotionPattern pattern) {
		
	}
}
